<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk_bitmap"
    android:orientation="vertical" >

    <!-- 标题 -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_bk_bitmap"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableRight="@drawable/logo_i"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/rAy_titleTvTxt"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/rtAy_goback"
            android:layout_width="47dp"
            android:layout_height="30dp"
            android:background="@drawable/goback_bt_bk_selector" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#58381f" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/corners_bg_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <!-- 搜索栏 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F2F2F3"
            android:layout_marginBottom="10dp" >

            <!--
             <DatePicker
            android:id="@+id/rtAy_reserveDateDp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></DatePicker>
            -->

            <Button
                android:id="@+id/rtAy_reserveDateDp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/right_arrow"
                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="left|center_vertical" />
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F6F6F6" >
    </LinearLayout>
            <Spinner
                android:id="@+id/rtAy_reserveTypeSp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:entries="@array/reserveTypes"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:spinnerMode="dropdown" />
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F6F6F6" >
    </LinearLayout>
            <Button
                android:id="@+id/rtAy_ssBt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/normal_button_selector"
                android:padding="10dp"
                android:text="@string/rtAy_ssBtTxt"
                android:textColor="#ffffff" />
        </LinearLayout>

        <!-- 无记录提示 -->

        <TextView
            android:id="@+id/rtAy_noNotifyTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/not_found"
            android:gravity="top|center"
            android:text="@string/rAy_noOrderNotify"
            android:textSize="14sp"
            android:visibility="gone" />
        <!-- 桌位列表 -->

        <ListView
            android:id="@+id/rtAy_tableListLv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:divider="#ffffff"
        android:dividerHeight="10dp"
        android:background="#ffffff" >
        </ListView>

        <!-- 操作按钮 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/rtAy_submitBt"
                android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:padding="5dp"
	        android:textColor="#ffffff"
	        android:background="@drawable/normal_button_selector"
	        android:textSize="18sp"
	        android:layout_marginRight="5dp"
                android:text="@string/rtAy_submitBtTxt" />

            <Button
                android:id="@+id/rtAy_cancelBt"
                android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:padding="5dp"
	        android:background="@drawable/normal_button_selector1"
	        android:textSize="18sp"
	        android:layout_marginLeft="5dp"
                android:text="@string/rtAy_cancelBtTxt"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
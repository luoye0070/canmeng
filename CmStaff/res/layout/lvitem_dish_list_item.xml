<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" 
    android:background="@drawable/stroke_bg_gray"
    >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="3dp"
    android:layout_margin="2dp"
    android:background="@drawable/corners_bg_white_5" 
    android:gravity="center">

    <ImageView
        android:id="@+id/lidli_foodImgIv"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="false"
        android:maxHeight="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/default_img" />
    
    <Button android:id="@+id/lidli_foodNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lidli_foodImgIv"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#00000000"
        android:text="火锅肉"/>
    
    <TextView android:id="@+id/lidli_priceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lidli_foodImgIv"
        android:layout_below="@id/lidli_foodNameTv"
        android:textColor="#737270"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:text="价格：23.00"/>
    <TextView android:id="@+id/lidli_countTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lidli_priceTv"
        android:layout_below="@id/lidli_foodNameTv"
        android:textColor="#737270"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="0dp"
        android:text="份数：3"/>
    
    <TextView android:id="@+id/lidli_statusTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lidli_foodImgIv"
        android:layout_below="@id/lidli_priceTv"
        android:textColor="#737270"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="0dp"
        android:text="初始状态"/>
    
    <TextView android:id="@+id/lidli_validTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lidli_foodImgIv"
        android:layout_below="@id/lidli_statusTv"
        android:textColor="#737270"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="0dp"
        android:text="有效"/>
    
    <TextView android:id="@+id/lidli_cancelReasonTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"/>
	</RelativeLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <Button 
        android:id="@+id/lidli_dishCzBt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/normal_button_selector"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        />
	<Button 
        android:id="@+id/lidli_dishCzQxBt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/normal_button_selector"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        />
	</LinearLayout>
</LinearLayout>
